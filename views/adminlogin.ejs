<style>
  .maincontainer{
    background: #273c75;
    width:100vw;
    height:100vh;
    display: flex;
    justify-content: center;
    align-items: center;

  } 
    .box {
  
      width:100vw;
      height:100vh;
     
      
    }
    .subbox {
  
  width:60%;
  height: auto;
  border-radius: 10px;
  background: #fff;
  margin-top: 30px;
  padding: 20px;
  
}
.buttonstyle{
    width: 100%;
  
  }
  
  </style>
  <html>
  
  <head>
    <title>Flight Interface</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    
  </head> 
  <div class="maincontainer">
  <div class="box">
 
   
    <form action="/admin/chkadminpassword" method="post" class="row g-3">
        <div class="col-md-6">
        <img src="/images/flight.jpg" style="width:100%; height:100vh;" >
        </div>
        <div class="col-md-6" style="background: #273c75;padding:20px;display:flex;flex-direction: column;justify-content: center;align-items: center;">
        <div style="font-weight: bold;font-size: 30px;color: #fff;">
         Adiministrator login
        </div>
        <div class=" subbox  ">
          
          <div class="col-md-12">
            <label for="email_mobile" class="form-label"><b>Email Address/Mobile Number </b></label>
            <input type="text" class="form-control" name="email_mobile" id="email_mobile" required>
          </div>
         
          <div class="col-md-12">
            <label for="pwd" class="form-label"><b>Password</b></label>
            <input type="text" class="form-control" name="pwd" id="pwd" required>
          </div>
          <div class="col-md-12" style="margin-top:20px;">
            <button type="submit" class="btn btn-secondary buttonstyle"><b>Login</b></button>
          </div>
          <div class="col-md-12" style="color:red ;font-size:20px;" >
            <%=message %>
          </div>
       
        </div>
        </div>
     
      </form>
 
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  </html>    