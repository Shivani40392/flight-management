<style>
    .maincontainer {
      background: #273c75;
      width:100vw;
      height:100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .box {
  
      width:60%;
      height:auto;
      background-color: #fff;
      border-radius: 10px;
      padding: 15px;
       
    }
  
    .heading
    {
      font-size: 20px;
      font-weight:bold;
      color: #273c75;
      margin-bottom: 15px;
    }
    
   
  </style>
  <html>
  
  <head>
    <title>Flights</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    
  </head> 
  <body>
    <div class="maincontainer">
      <div class="box">
        
        <div class="heading">
          <a href="/flight/flightinterface"><img src="/images/addrecordicon.png" width="35"></a>
          <img src="/images/flighticon.png" width="65">
          <b>Flights</b>
        </div>
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Flight Name</th>
                <th scope="col">Days/Seats</th>
                <th scope="col">SourceCity</th>
                <th scope="col">DestinationCity</th>
                <th scope="col">Company</th>
                <th scope="col">Logo</th>
                <th scope="col">Edit/Delete</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                
                <% data.map((item)=>{ %>
                <th scope="row"><%=item.flightname %><br><%=item.flighttype %></th>
                <td><%=item.days %><br>Seats:<%=item.totalseats %></td>
                <td><%=item.source %><br><%=item.departuretime %></td>
                <td><%=item.destination %><br><%=item.arrivaltime %></td>
                <td><%=item.company %></td>
                <td><a href="/flight/searchbyidforimage?fid=<%=item.flightid %>"><img src='/images/<%=item.logo %> ' width="50"></a></td>
                <td><a href="/flight/searchbyid?fid=<%=item.flightid %>">Edit/Delete</a></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
      </div>
    </div>
</body>   
</html>      